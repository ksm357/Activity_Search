
<%= form_for(@review, :html => { :multipart => true }) do |f| %>
    
    <input type="hidden" name="info_id" value="<%= @oneInfo.id %>">
    
    리뷰 제목 : 
    <%= f.text_field :reviewTitle %>
    <br><br>
    
    별점 작성 : <%#= rating_for i, 'individual' , enable_half: true, disable_after_rate: false %>
    <br><br>
    
    리뷰 내용 
    <%= f.text_area :reviewContent, :class => "tinymce", :rows => 15, :cols => 50 %>
    
    <%= tinymce %>
    <br>
    
    사진 올리기
    <%= f.fields_for :review_attachments do |p| %>
      <%= p.file_field :upreview, :multiple => true, name: "review_attachments[upreview][]" %>
    <% end %>
    <br>

    <%= f.submit '리뷰 추가', class: "btn btn-success" %>
<% end %>
