<div id="map">
    <% @storeInfo.each do |i| %>
        <div id="popup<%= i.id %>" class="overlay">
        	<div class="popup">
        		<h2><%= i.infoTitle %></h2>
        		<a class="close" href="#<%= i.id%>">&times;</a>
        		<div class="content">
        		    
                  <!-- Nav tabs -->
                  <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#info<%= i.id%>" aria-controls="info" role="tab" data-toggle="tab">INFO</a></li>
                    <li role="presentation"><a href="#review<%= i.id%>" aria-controls="review" role="tab" data-toggle="tab">REVIEW</a></li>
                    <li role="presentation"><a href="#settings<%= i.id%>" aria-controls="settings" role="tab" data-toggle="tab">SETTINGS</a></li>
                  </ul>

                  <!-- Tab panes -->
                  <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="info<%= i.id%>">
                        평점 : <%= rating_for i, 'average', disable_after_rate: true, imdb_avg: true %>
                        <%= imdb_style_rating_for i, 'average', disable_after_rate: true, imdb_avg: true %>
                        <%= i.rates("average").count %>
                        <%#= imdb_style_rating_for i, current_user%>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="review<%= i.id%>">
                        <h4>후기</h4>
                        <hr>
                        평점 매기기는 로그인하셔야 가능합니다
                        <% if current_user %>
                            <br>평점 작성
                            <%= rating_for i, 'average', enable_half: true, disable_after_rate: false %>
                        <% end %>
                        <hr>
                        후기 작성<br> 
                        <input class="validate" type="text" name="comment" id="comment_<%= i.id%>">
                        <button value="<%= i.id %>" style="text-align: center" class="btn reply_submit">
                            작성
                        </button><br>
                        <hr>
                        <div id="commentshow_<%= i.id %>">
                            <% i.comments.each do |c| %>
                               <span id="user_<%= i.id%>"><%= c.userName %></span>  : 
                               <%= c.comment %>
                               <span id="star_<%= i.id%>"></span>
                               <a href="/comment_destroy/<%= c.id %>">[댓글삭제]</a>
                               <input id="commentDestroy" type="hidden" value="<%=c.id %>">
                               <br>
                            <% end %>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="settings<%= i.id%>">...</div>
                  </div>
                </div>
        	</div>
        </div>
    <% end %>
</div>
   
 
<script>
    var seoulCenter = new naver.maps.LatLng(37.5665350, 126.9779690); //서울 시청 좌표값(서울 한가운데)
// 지도 기본 위치
    var map = new naver.maps.Map('map', {
        center: seoulCenter,
        zoom: 6,
        scaleControl: false,
        logoControl: false,
        mapDataControl: false,
        mapTypeControl: true,
        zoomControl: true,
        minZoom: 1,
        zoomControlOptions: {
            position: naver.maps.Position.TOP_RIGHT
        }
    });
    
    // GPS 이미지 파일 넣는 곳
    var locationBtnHtml = '<img src="<%= image_url('gps.png') %>" class="gpsImg" onclick="getLocation()">';
    var customControl = new naver.maps.CustomControl(locationBtnHtml, {
        position: naver.maps.Position.TOP_LEFT,
        zIndex: 1
    });
    customControl.setMap(map);
    
//마커
    var games = new Array();
    var marker = new Array();
    var contentString = new Array();
    var infowindow = new Array();
   
    <% @storeInfo.each do |i| %>
        games[<%= i.id %>] = new naver.maps.LatLng(<%= i.location_lat %>, <%= i.location_lng %>);
        
        var markerOptions = {
            position: games[<%= i.id %>],
            map: map,
            zIndex: 1,
            icon: {
                //마커 url, 마커 이미지 url
                <% if i.game == '볼링' %>
                    url: '<%= image_url("bowling.png") %>', 
                <% elsif i.game == '탁구' %>  
                    url: '<%= image_url("pingpong.png") %>', 
                <% elsif i.game == '야구' %>
                    url: '<%= image_url("baseball.png") %>',
                <% elsif i.game == '요가' %>
                    url: '<%= image_url("yoga.png") %>', 
                <% elsif i.game == '수영' %>
                    url: '<%= image_url("swimming.png") %>', 
                <% elsif i.game == '농구' %>
                    url: '<%= image_url("basketball.png") %>', 
                <% elsif i.game == '서핑' %>
                    url: '<%= image_url("surfing.png") %>', 
                <% end %>
                size: new naver.maps.Size(30,38),// 마커 사이즈
                scaledSize: new naver.maps.Size(30,38),
                origin: new naver.maps.Point(0, 0), // origin 기본값 (0, 0)
                anchor: new naver.maps.Point(15, 35) // anchor속성은 이미지의 중앙 하단 포인터를 기본값으로 설정
                
            }     
        };
        
        marker[<%= i.id %>] = new naver.maps.Marker(markerOptions);

        // 마커 안에 정보 넣기 
        // db에 있는 정보 불러내기 아직 구현 못함
        contentString[<%= i.id %>] = [
            '<div class="iw_inner">',
            '    <%= image_tag i.info_image_url.thumb1.url, class: "infoImage" %><br>',
            '    <h4><%= i.infoTitle %></h4>',
            '    <p><%= i.region %> | <%= i.address %><br>',
            '        <%= i.game %> &gt; 특별, 광역시청<br>',
            '   </p>',
            '   <a class="btn btn-primary "href="#popup<%= i.id %>">상세보기</a>',
            '</div>'
        ].join('');
        
        infowindow[<%= i.id %>] = new naver.maps.InfoWindow({
            content: contentString[<%= i.id %>]
        });
    
        naver.maps.Event.addListener(marker[<%= i.id %>], "click", function(e) {
            if (infowindow[<%= i.id %>].getMap()) {
                infowindow[<%= i.id %>].close();
            } else {
                infowindow[<%= i.id %>].open(map, marker[<%= i.id %>]);
                //map.setCenter(games[<%#= i.id %>]);
            }
        });
       
       //search game 
        $( "#searchAll" ).click(function() {
            marker[<%= i.id %>].setMap(null);
            marker[<%= i.id %>].setMap(map);
        });
       
        $( "#searchBowling" ).click(function() {
            marker[<%= i.id %>].setMap(null);
            <% @bowling.each do |e| %>
                marker[<%= e.id %>].setMap(map);   
            <% end %>
        });
        
        $( "#searchBaseball" ).click(function() {
            marker[<%= i.id %>].setMap(null);
            <% @baseball.each do |e| %>
                marker[<%= e.id %>].setMap(map);   
            <% end %>
        });
        
        $( "#searchBasketball" ).click(function() {
            marker[<%= i.id %>].setMap(null);
            <% @basketball.each do |e| %>
                marker[<%= e.id %>].setMap(map);   
            <% end %>
        });
        
        $( "#searchPingpong" ).click(function() {
            marker[<%= i.id %>].setMap(null);
            <% @pingpong.each do |e| %>
                marker[<%= e.id %>].setMap(map);   
            <% end %>
        });
        
        $( "#searchSwimming" ).click(function() {
            marker[<%= i.id %>].setMap(null);
            <% @swimming.each do |e| %>
                marker[<%= e.id %>].setMap(map);   
            <% end %>
        });
        
        $( "#searchSurfing" ).click(function() {
            marker[<%= i.id %>].setMap(null);
            <% @surfing.each do |e| %>
                marker[<%= e.id %>].setMap(map);   
            <% end %>
        });
        
        $( "#searchYoga" ).click(function() {
            marker[<%= i.id %>].setMap(null);
            <% @yoga.each do |e| %>
                marker[<%= e.id %>].setMap(map);   
            <% end %>
        });
        
    <% end %>
 
// GPS이용하기
    // HTML5의 geolocation으로 사용할 수 있는지 확인합니다  x
    function getLocation() {
        if (navigator.geolocation) {
            
            // GeoLocation을 이용해서 접속 위치를 얻어옵니다
            navigator.geolocation.getCurrentPosition(function(position) {
                
                var lat = position.coords.latitude, // 위도
                    lon = position.coords.longitude; // 경도
                
                var locPosition = new naver.maps.LatLng(lat, lon), // 마커가 표시될 위치를 geolocation으로 얻어온 좌표로 생성합니다
                    message = '<div style="padding:5px;">여기에 계신가요?!</div>'; // 인포윈도우에 표시될 내용입니다
                
                // 마커와 인포윈도우를 표시합니다
                
                displayMarker(locPosition, message);
        
              });
        } else { // HTML5의 GeoLocation을 사용할 수 없을때 마커 표시 위치와 인포윈도우 내용을 설정합니다
        
            var locPosition = new naver.maps.LatLng(37.56653501, 126.9779690),    
                message = 'geolocation을 사용할수 없어요'
                
            displayMarker(locPosition, message);
        }
    }
    // 지도에 마커와 인포윈도우를 표시하는 함수입니다
    function displayMarker(locPosition, message) {
    
        // 마커를 생성합니다
        var gpsMarker = new naver.maps.Marker({  
            map: map, 
            position: locPosition,
            icon: {
                url: 'https://pbs.twimg.com/profile_images/565254803643592704/KaVxRt4p.png',
                size: new naver.maps.Size(25, 34),
                scaledSize: new naver.maps.Size(25, 34),
                origin: new naver.maps.Point(0, 0),
                anchor: new naver.maps.Point(12, 34)
            }
        }); 
        
        var iwContent = message, // 인포윈도우에 표시할 내용
            iwRemoveable = true;
            
        // 인포윈도우를 생성합니다
        var geoinfowindow = new naver.maps.InfoWindow({
            content : iwContent,
            removable : iwRemoveable
        });
        
        // 인포윈도우를 마커위에 표시합니다 
        geoinfowindow.open(map, gpsMarker);
        
        // 지도 중심좌표를 접속위치로 변경합니다
        map.setCenter(locPosition);      
    }    
    
//댓글 작성
    $(function() { 
        $(".reply_submit").click(function() { 
            modalInfoId = this.value;
            modalComment = $("#comment_" + modalInfoId).val();
            modalName = $("#user_name").text();
            destroyId = $("#commentDestroy").val(); //<#%= c.id %>
            
            $.ajax({
              method: "POST",
              url: "/comment",
              data: { info_id: modalInfoId, comment: modalComment, userName: modalName},
                success: function() {
                    alert( "댓글이 작성되었습니다.");
                    $("#commentshow_" + modalInfoId).append(modalName +  " : " + modalComment + "<br>" + "<a href=/comment_destroy/"+ destroyId + ">[댓글삭제]</a>" + "<br>");
                    $("#comment_" + modalInfoId).val('');
                },
                error: function() {
                    alert( "댓글이 작성되지 않았습니다. 로그인을 해주세요");
                } 
            })
        });
    });  
    
    
</script>