<% @storeInfo.each do |i| %>
<div class="row">
  <div class="col-md-6">
    <br>
    <button id="write<%= i.id %>" class="btn btn-primary">리뷰쓰기</button>
    <hr>
    총 몇건 .. 추천 순 / 최신 순
    <hr>  
    <br>후기 작성<br> 
    <% if user_signed_in? %>
        <br>평점 작성
        <%= rating_for i, 'average' , enable_half: true, disable_after_rate: false %>
    <% else %>    
        평점 매기기는 로그인하셔야 가능합니다
    <% end %>
    <textarea class="form-control" rows="3" name="comment" id="comment_<%= i.id%>" placeholder="후기를 작성해주세요"></textarea>
    <button value="<%= i.id %>" style="text-align: center" class="btn reply_submit">
      작성
    </button>
    <hr>
  </div>
  <div class="col-md-6">
    <div id="commentshow_<%= i.id %>">
      <% i.comments.each do |c| %>
        <span id="user_<%= i.id%>"><%= c.userName %></span>
        : <%= c.comment %>
        <% if user_signed_in? %>
          <a href="/comment_destroy/<%= c.id %>" class="destroyComment">[댓글삭제]</a>
        <% end %>
        <input id="oneComment" type="hidden" value="<%=c.id %>">
        <br>
      <% end %>
    </div>
  </div>
</div>
<%end%>