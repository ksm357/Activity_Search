<div class="cast-body">
    <div class="container">
        <%#= @club.id %>
        <h1><%= @club.clubTitle %></h1> <br>
        <h5><%= @club.clubGame %></h5>
        <h5><%= @club.clubRegion %></h5>
        <h5><%= @club.clubContent %></h5>
        <br>
        
        
        
        <!--<%#= form_tag("/clubs/#{@club.id}/apply", method: 'post') do %>-->
        <!--    <%#= submit_tag('가입하기') %>-->
        <!--<%# end %>-->
        <%= form_tag("/clubs/#{@club.id}/apply/#{@club.user_id}", method: 'post') do %>
            <h4>클럽장에게 자신을 소개하세요.(ex- 이름/성별/나이 등)</h4>
            <%= text_area_tag(:clubApply) %><br>
            <%= submit_tag('가입요청') %>
        <% end %>

        <hr>
        
        <h4>클럽 회원</h4>
        <% @club.users.each do |p| %>
          <%= p.email %>
        <% end %>
        
        <hr>
        
        <%= link_to '수정', edit_club_path(@club.id) %> / 
        <%= link_to '삭제', club_path(@club.id) , method: 'delete', data: {confirm: "정말 삭제하실 건가요?"} %> 
        <br>
        <%= link_to "Back", '/clubs' %>
                    
    </div>
</div>



