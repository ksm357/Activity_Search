<%#= bootstrap_devise_error_messages! %>
<% if is_mobile_device? %>
<div class="container" style="padding-top: 100px">
<% else %>
<div class="container" style="width: 50%; padding-top: 100px">
<% end %>
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <p style="font-size:3rem; ">
        <% if is_mobile_device? %>
          <img src="<%= image_url('kangaroo2.png') %>" style="height: 150px; width: 50%; margin-right:10%">   Act now
        <% else %>
          <img src="<%= image_url('kangaroo2.png') %>" style="height: 200px; width: 50%; margin-right:10%">   Act now<%#= t('.sign_in', default: 'Sign in') %>
        <% end %>
      </p>
      <h4><%#= t('.sign_up', default: 'Sign up') %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
        <div class="form-group">
          <%= f.label :email , style: 'color: #a3a3a3; font-size: 2rem'%>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label '이름' , style: 'color: #a3a3a3; font-size: 2rem'%>
          <%= f.text_field :username, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label '닉네임' , style: 'color: #a3a3a3; font-size: 2rem'%>
          <%= f.text_field :nickname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password , style: 'color: #a3a3a3; font-size: 2rem'%>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation , style: 'color: #a3a3a3; font-size: 2rem'%>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
        <p style="text-align: center">회원가입 시 <a href="#">이용약관</a>에 동의하게 됩니다. </p>
        <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-custom' %>
      <% end %>
    </div>
  </div>
  <%= render 'devise/shared/links' %>
</div>

