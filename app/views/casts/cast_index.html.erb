
<div class="cast-body">
    <div class="container">
        
        <h1>Activity Cast</h1> <br>
        <h5> 아는 것도 실력이다. </h5>
        <br><br><br>
        
        <div class="row">
            <% @casts.each do |i| %>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="card" style="border-style: solid; width: 100%;">
                        <%#= image_tag(i.cast_attachments.url) %>
                        <% i.cast_attachments.limit(1).each do |p| %>
                          <%= image_tag p.upcast.thumb2.url %>
                          <br>
                        <% end %>
                        
                        <%#= link_to image_tag(cast.cast_image_url.thumb.url), cast_path(cast.id) %>
                        
                        <br>
                        <%#= cast.id %>
                        <div class="card-block">
                           <h4 class="card-title"><%= i.castTitle %></h4>
                           
                        </div>
                        <%#= image_tag cast.cast_image_url.thumb.url %>
                        
                        <%#= link_to '보기', cast_path(cast.id) %> 
                         <!--Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#castModal<%= i.id %>">
                          캐스트 보기
                        </button>
                            
                             <!--Modal -->
                        <div class="modal fade" id="castModal<%= i.id %>" tabindex="1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                 <h2 class="modal-title" id="exampleModalLongTitle"><%= i.castTitle %></h2> 
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                <%#= i.id %>
                                <p>
                                <%= i.castTitle %>
                                </p>
                                <P>
                                <%= i.castContent %> 
                                </P><br>
                                <% i.cast_attachments.each do |p| %>
                                  <%= image_tag p.upcast.url %>
                                  <br><br>
                                <% end %>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              </div>
                            </div>
                          </div>
                        </div>    
                    </div>
                </div>
            <% end %>
        </div>
        <hr>
        <%= link_to '새 글쓰기' , casts_cast_new_path  %>
        <%= link_to 'Home', '/' %>
    </div>
    
